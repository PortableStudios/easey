{
	"license": "UNLICENSED",
	"type": "module",
	"private": true,
	"scripts": {
		"prepare": "husky",
		"pre-commit": "lint-staged",
		"pre-push": "concurrently --group --timings yarn:check yarn:lint yarn:test:unit yarn:test:integration",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"plop": "plop",
		"update-theme": "figma2theme generate-tailwind && prettier --write ./tailwind.figma2theme.js",
		"test": "yarn test:integration && yarn test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:unit": "vitest run",
		"test:unit:ui": "vitest --ui",
		"test:unit:watch": "vitest",
		"test:integration": "playwright test",
		"test:integration:ui": "playwright test --ui",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test-storybook": "test-storybook --index-json"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.9.1",
